<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_20sdp"
            android:layout_gravity="center"
            android:background="@color/white">

            <code.view.CustomTextView
                android:layout_width="@dimen/_220sdp"
                android:layout_height="@dimen/_30sdp"
                android:text="@string/your_results_are"
                android:id="@+id/textView79"
                android:textSize="@dimen/_14sdp"
                android:gravity="center"
                android:textColor="@color/darkGrey"
                android:layout_marginTop="@dimen/_5sdp"
                app:customFont="OpenSans-Regular.ttf"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView80"
                android:layout_below="@+id/textView79"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/_14sdp"
                android:paddingLeft="@dimen/_8sdp"
                android:paddingRight="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:textColor="@color/blackNew"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView81"
                android:layout_below="@+id/textView80"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/_14sdp"
                android:paddingLeft="@dimen/_8sdp"
                android:paddingRight="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/blackNew"/>

            <code.view.CustomTextView
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_35sdp"
                android:text="@string/close"
                android:id="@+id/textView83"
                android:layout_below="@+id/textView81"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                app:customFont="OpenSans-Regular.ttf"
                android:background="@drawable/rectangle_blue_button"/>

        </RelativeLayout>
    </ScrollView>
</LinearLayout>

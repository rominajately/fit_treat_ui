<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlHeader"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp">

        <include
            layout="@layout/inflate_header"
            android:layout_height="match_parent"
            android:layout_width="match_parent" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_margin="@dimen/_5sdp">

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="@dimen/_130sdp"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            app:cardElevation="@dimen/_5sdp"
            android:layout_gravity="center"
            app:cardCornerRadius="@dimen/_5sdp"
            android:layout_weight="1">

            <RelativeLayout
                android:id="@+id/rlOTC"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/ivOTC"
                    android:layout_width="@dimen/_75sdp"
                    android:layout_height="@dimen/_75sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_20sdp"
                    app:srcCompat="@drawable/ic_otc_medicine" />

                <code.view.CustomTextView
                    android:id="@+id/tvOTC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_below="@+id/ivOTC"
                    android:text="@string/otc_medicine"
                    android:gravity="center"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/darkGrey"
                    app:customFont="OpenSans-Regular.ttf"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="@dimen/_130sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            app:cardElevation="@dimen/_5sdp"
            android:layout_gravity="center"
            app:cardCornerRadius="@dimen/_5sdp"
            android:layout_weight="1">

            <RelativeLayout
                android:id="@+id/rlCalories"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/ivCalories"
                    android:layout_width="@dimen/_75sdp"
                    android:layout_height="@dimen/_75sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_20sdp"
                    app:srcCompat="@drawable/ic_calories_requirment" />

                <code.view.CustomTextView
                    android:id="@+id/tvCalories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_below="@+id/ivCalories"
                    android:text="@string/calories_requirement"
                    android:gravity="center"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/darkGrey"
                    app:customFont="OpenSans-Regular.ttf"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_margin="@dimen/_5sdp">

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="@dimen/_130sdp"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            app:cardElevation="@dimen/_5sdp"
            android:layout_gravity="center"
            app:cardCornerRadius="@dimen/_5sdp"
            android:layout_weight="1">

            <RelativeLayout
                android:id="@+id/rlNearByDoctor"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/ivNearByDoctor"
                    android:layout_width="@dimen/_75sdp"
                    android:layout_height="@dimen/_75sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_20sdp"
                    app:srcCompat="@drawable/ic_nearby_doctor" />

                <code.view.CustomTextView
                    android:id="@+id/tvNearByDoctor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_below="@+id/ivNearByDoctor"
                    android:text="@string/near_by_doctor"
                    android:gravity="center"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/darkGrey"
                    app:customFont="OpenSans-Regular.ttf"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="@dimen/_130sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            app:cardElevation="@dimen/_5sdp"
            android:layout_gravity="center"
            app:cardCornerRadius="@dimen/_5sdp"
            android:layout_weight="1">

            <RelativeLayout
                android:id="@+id/rlNearByPharmacy"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/ivNearByPharmacy"
                    android:layout_width="@dimen/_75sdp"
                    android:layout_height="@dimen/_75sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_20sdp"
                    app:srcCompat="@drawable/ic_nearby_pharmacy" />

                <code.view.CustomTextView
                    android:id="@+id/tvNearByPharmacy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_below="@+id/ivNearByPharmacy"
                    android:text="@string/near_by_pharmacy"
                    android:gravity="center"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/darkGrey"
                    app:customFont="OpenSans-Regular.ttf"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:background="@mipmap/header">

        <RelativeLayout
            android:id="@+id/rlBack"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="@dimen/_18sdp"
                android:layout_height="match_parent"
                android:id="@+id/ivBack"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_back"
                android:layout_marginLeft="@dimen/_10sdp"/>

        </RelativeLayout>

        <code.view.CustomTextView
            android:id="@+id/tvHeader"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:textSize="@dimen/_16sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_5sdp"
            app:customFont="Arciform.otf"
            android:layout_toRightOf="@+id/rlBack"
            android:singleLine="true"
            android:layout_toLeftOf="@+id/rl2"/>

        <RelativeLayout
            android:id="@+id/rl2"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:visibility="visible">

            <RelativeLayout
                android:id="@+id/rlNearByDoctor"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_centerVertical="true"
                android:background="@color/blueDark"
                android:layout_marginRight="@dimen/_10sdp">

                <ImageView
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    app:srcCompat="@drawable/ic_nearby_doctor_new"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlNearByPharmacy"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@color/blueDark">

                <ImageView
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/ic_nearby_pharmacy_new"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
